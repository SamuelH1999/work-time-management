<Page x:Class="Working_time_management.TimeDetection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Working_time_management"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TimeDetection" Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Button x:Name="btnBackTD" FontSize="20" Grid.Row="0" Grid.Column="3" Click="btnBackTDEvt">Zurück</Button>
        <Label FontSize="22" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center">Status:</Label>
        <Label x:Name="lblStatus" FontSize="22" Foreground="Red" Grid.Column="2" Grid.Row="1" VerticalAlignment="Center">Abgemeldet</Label>
        <Button x:Name="btnComeAndGo" FontSize="20" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Click="btnCaG" >Kommen/Gehen</Button>

    </Grid>
</Page>
