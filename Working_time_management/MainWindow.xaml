<Window x:Class="Working_time_management.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Working_time_management"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="180*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label x:Name="tbClock" Grid.Column="1" Content=" 16:00 Uhr&#xA;01.06.2023" HorizontalAlignment="Center" FontSize="20" Width="110"/>

        <Label Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right">
            <Image Source="/Logo_Hochschule.png" />
        </Label>
        <Frame x:Name="ContentFrame" Grid.ColumnSpan="3" Grid.Row="1" NavigationUIVisibility="Hidden"/>
    </Grid>


</Window>
